@page
@model bodyshedule.Areas.Identity.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Изменение пароля";
}

<div class="row">
    <div class="col-lg-4 mx-auto rounded border border-5 p-3">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com"/>
                <label asp-for="Input.Email" class="form-label text-secondary"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.CurentPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Введите текущий пароль" />
                <label asp-for="Input.CurentPassword" class="form-label text-secondary"></label>
                <span asp-validation-for="Input.CurentPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Введите новый пароль" />
                <label asp-for="Input.NewPassword" class="form-label text-secondary"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmNewPassword" class="form-control" autocomplete="confirm-password" aria-required="true" placeholder="Подтвердите новый пароль" />
                <label asp-for="Input.ConfirmNewPassword" class="form-label text-secondary"></label>
                <span asp-validation-for="Input.ConfirmNewPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Изменить</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}